<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotel_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="@dimen/default_padding"
    android:layout_marginRight="@dimen/default_padding"
    android:layout_marginTop="8dp"
    card_view:cardBackgroundColor="@color/theme_primary"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="0dp">

    <TextView
        style="@style/HotelsAppTheme.TextAppearance.HotelList.SubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotels_without_availability_for_the_selected_dates" />


</android.support.v7.widget.CardView>