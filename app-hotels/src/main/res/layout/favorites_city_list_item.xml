<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mainnav_favourites"
        android:drawablePadding="@dimen/default_padding"
        android:drawableRight="@drawable/arrow_calendar_right"
        android:paddingBottom="@dimen/default_padding"
        android:paddingLeft="@dimen/minimum_default_padding"
        android:paddingRight="@dimen/minimum_default_padding"
        android:paddingTop="@dimen/default_padding"
        android:textSize="16sp"
        tools:text="Amsterdam, Netherlands" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/minimum_default_padding"
        android:layout_marginRight="@dimen/minimum_default_padding"
        android:background="@color/gray_light" />


</LinearLayout>