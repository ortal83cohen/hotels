<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotel_details_room_l"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_button_gray_border_color_white"
        android:padding="@dimen/minimum_default_padding"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_results"/>

        <TextView
            style="@style/HotelsAppTheme.TextAppearance.HotelSummary.SelectDates"
            android:id="@+id/no_availability_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/rooms_not_available" />

            <Button
                android:id="@+id/date_select_button"
                style="@style/HotelsAppTheme.Widget.HotelSummary.bookNowButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:minWidth="216dp"
                android:layout_marginTop="@dimen/minimum_default_padding"
                android:background="@drawable/rounded_ripple_button_theme_accent"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:text="@string/change_dates"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

        <Button
            android:id="@+id/button_search_list"
            style="@style/HotelsAppTheme.Widget.HotelSummary.bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:minWidth="216dp"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:background="@drawable/rounded_ripple_button_theme_accent"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="@string/find_available_hotels"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.v7.widget.CardView>