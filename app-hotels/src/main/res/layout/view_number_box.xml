<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_home"
    >

    <ImageView
        android:layout_marginTop="@dimen/default_padding"
        android:id="@android:id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_datepicker_checkin" />

    <TextView
        android:id="@+id/number"
        style="@style/HotelsAppTheme.Widget.Datepicker.SelectedNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        tools:text="17" />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/theme_text_secondary"
        android:textSize="10dp"
        tools:text="Jun" />

    <TextView
        android:id="@android:id/text1"
        style="@style/HotelsAppTheme.TextAppearance.Datepicker.Button.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/check_in_caps" />

</merge>