<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotel_details_room_l"
    android:layout_width="fill_parent"
    android:layout_height="166dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_button_gray_border_color_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/minimum_default_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_dates"/>

        <TextView
            style="@style/HotelsAppTheme.TextAppearance.HotelSummary.SelectDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:gravity="center"
            android:text="@string/select_dates_to_see_prices" />

        <Button
            android:id="@+id/date_select_button"
            style="@style/HotelsAppTheme.Widget.HotelSummary.bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:background="@drawable/rounded_ripple_button_theme_accent"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="@string/select_dates"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>