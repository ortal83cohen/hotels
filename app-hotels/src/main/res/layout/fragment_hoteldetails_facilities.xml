<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/hotel_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_secondary" />

        <Button
            android:id="@+id/read_more_description"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_padding"
            android:background="@drawable/ripple_button_color_white"
            android:gravity="center"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="@string/read_more"
            android:textAllCaps="false"
            android:textColor="@color/theme_accent" />

        <LinearLayout
            android:id="@+id/facilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/payment_methods"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_secondary" />

        <LinearLayout
            android:id="@+id/payment_methods_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/payment_methods_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/visa_mastercard"
            android:textSize="@dimen/size_text_secondary" />

        <TextView
            android:id="@+id/cancellation_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/note_this_hotel"
            android:textSize="@dimen/size_text_secondary"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/services"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_secondary" />


        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/services"
            android:textSize="@dimen/size_text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/general_facilities"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size_text_secondary" />


        <TextView
            android:id="@+id/general_facilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/minimum_default_padding"
            android:text="@string/general_facilities"
            android:textSize="@dimen/size_text_secondary" />


    </LinearLayout>


</ScrollView>