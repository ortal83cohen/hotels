<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.etb.app.widget.recyclerview.EndlessRecyclerView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/default_padding"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/no_results"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="@dimen/default_padding"
            android:text="@string/there_are_no_reviews_currently_available_for_this_property"
            android:textSize="@dimen/size_text_secondary" />

    </android.support.v7.widget.CardView>

</FrameLayout>