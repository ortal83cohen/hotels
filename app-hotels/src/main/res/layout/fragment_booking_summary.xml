<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
    <!--android:id="@+id/user_name"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/white"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:padding="@dimen/default_padding"-->
    <!--android:text="Traveller"-->
    <!--android:textColor="@color/theme_accent"-->
    <!--style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"/>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context=".HotelDetailsActivity">

                <include layout="@layout/summary_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/default_padding"
                            android:src="@drawable/check_in" />

                        <TextView
                            android:id="@+id/check_in_day"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="10" />

                        <TextView
                            android:id="@+id/check_in_date"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/default_padding"
                            android:text="@string/jun"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/default_padding"
                            android:text="@string/check_in_caps"
                            android:textSize="@dimen/size_text_small" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginTop="@dimen/default_padding"
                        android:background="@color/line_gray" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/default_padding"
                            android:src="@drawable/check_out" />

                        <TextView
                            android:id="@+id/check_out_day"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="12" />

                        <TextView
                            android:id="@+id/check_out_date"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/default_padding"
                            android:text="JUN"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/default_padding"
                            android:text="@string/check_out_caps"
                            android:textSize="@dimen/size_text_small" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginTop="@dimen/default_padding"
                        android:background="@color/line_gray" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/default_padding"
                            android:src="@drawable/nights" />

                        <TextView
                            android:id="@+id/number_nights"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="2" />

                        <TextView
                            android:id="@+id/text_nights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/default_padding"
                            android:text="@string/nights"
                            android:textSize="@dimen/size_text_small" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginTop="@dimen/default_padding"
                        android:background="@color/line_gray" />

                    <FrameLayout
                        style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/default_padding"
                            android:src="@drawable/guests" />

                        <TextView
                            android:id="@+id/number_persons"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="2" />

                        <TextView
                            android:id="@+id/text_persons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/default_padding"
                            android:text="@string/guests"
                            android:textSize="@dimen/size_text_small" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:layout_marginTop="@dimen/default_padding"
                        android:background="@color/line_gray" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/default_padding"
                            android:src="@drawable/rooms" />

                        <TextView
                            android:id="@+id/number_rooms"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="1" />

                        <TextView
                            android:id="@+id/text_rooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/default_padding"
                            android:text="@string/rooms"
                            android:textSize="@dimen/size_text_small" />
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:layout_marginRight="@dimen/default_padding"
                    android:background="@color/line_gray" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <TextView
                            android:id="@+id/room_name"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Deluxe King Size Room , With Personal Mini-bar   " />

                        <TextView
                            android:id="@+id/discount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/special_deal_10_discount"
                            android:textColor="@color/theme_accent"
                            android:textSize="@dimen/size_text_secondary" />

                        <TextView
                            android:id="@+id/room_extra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/breakfast_included"
                            android:textColor="@color/theme_accent"
                            android:textSize="@dimen/size_text_secondary" />

                        <TextView
                            android:id="@+id/room_refundable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/non_refundable_deal"
                            android:textSize="@dimen/size_text_secondary" />
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_light"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <TextView
                                android:id="@+id/text_rooms_price"
                                style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="3 Rooms Price" />

                            <TextView
                                android:id="@+id/text_summary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                tools:text="Total price for 3 nights ex.extra tax of €6 p.p" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/total_price"
                            style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/default_padding"
                            android:drawableLeft="@drawable/info_dot"
                            android:drawablePadding="@dimen/default_padding"
                            tools:text="€139.25" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:layout_marginRight="@dimen/default_padding"
                        android:background="@color/line_gray" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <TextView
                                style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_today"
                                android:textSize="@dimen/size_text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_at_accommodation"
                                android:textSize="@dimen/size_text_secondary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/default_padding"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/default_padding">

                            <TextView
                                android:id="@+id/prepay"
                                style="@style/HotelsAppTheme.TextAppearance.Normal.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textSize="@dimen/size_text_secondary"

                                tools:text="€129.25" />

                            <TextView
                                android:id="@+id/postpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textSize="@dimen/size_text_secondary"
                                tools:text="€10" />

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <Button
        android:id="@+id/book_button"
        style="@style/HotelsAppTheme.Widget.HotelSummary.AccentBottomButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/book_now" />
</LinearLayout>
