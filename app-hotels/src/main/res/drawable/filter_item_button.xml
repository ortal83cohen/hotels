<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="1dp" />
            <solid android:color="@color/theme_accent" />
            <stroke android:width="1dp" android:color="#179f7a" />
        </shape>

    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="1dp" />
            <solid android:color="@color/theme_accent" />
            <stroke android:width="1dp" android:color="#179f7a" />
        </shape>
    </item>
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="-1dp">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                <corners android:radius="1dp" />
                <solid android:color="@color/white" />
                <stroke android:width="1dp" android:color="#e9e9e9" />
            </shape>
        </inset>
    </item>
</selector>